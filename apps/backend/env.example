# 服務基本配置
NODE_ENV=development
PORT=8000
API_BASE_URL=http://localhost:8000

# CORS 配置
CORS_ORIGIN=http://localhost:3000

# MongoDB 配置
MONGODB_URI=mongodb://localhost:27017/localite
MONGODB_TEST_URI=mongodb://localhost:27017/localite-test

# Redis 配置
REDIS_URL=redis://localhost:6379
REDIS_TEST_URL=redis://localhost:6379/1

# Firebase 配置
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY_PATH=./config/service-account.json
# 或者使用環境變數
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Google Cloud 配置
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=./config/service-account.json

# AI 服務配置
VERTEX_AI_LOCATION=us-central1
OPENAI_API_KEY=your-openai-api-key

# 綠界金流配置
ECPAY_MERCHANT_ID=your-merchant-id
ECPAY_HASH_KEY=your-hash-key
ECPAY_HASH_IV=your-hash-iv
ECPAY_RETURN_URL=http://localhost:8000/api/v1/payments/ecpay/return
ECPAY_CLIENT_BACK_URL=http://localhost:8000/api/v1/payments/ecpay/notify

# JWT 配置
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d

# 檔案上傳配置
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,mp3,wav

# 速率限制配置
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# 日誌配置
LOG_LEVEL=debug
LOG_FORMAT=combined

# 監控配置
ENABLE_MONITORING=true
SENTRY_DSN=your-sentry-dsn 