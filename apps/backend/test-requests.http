### 快速測試 - 簡單導覽生成
POST {{baseUrl}}/tours/generate
Content-Type: application/json
X-Test-User: test-user

{
  "location": {
    "name": "測試地點",
    "description": "簡單的測試描述",
    "coordinates": {"lat": 25.0340, "lng": 121.5645},
    "category": "test"
  },
  "preferences": {
    "language": "zh-TW",
    "duration": 10,
    "interests": ["test"],
    "audienceType": "adult",
    "difficulty": "easy"
  }
}

### 快速測試 - 簡單語音生成
POST {{baseUrl}}/tours/speech
Content-Type: application/json
X-Test-User: test-user

{
  "text": "這是一個簡單的語音測試。",
  "language": "zh-TW"
}

